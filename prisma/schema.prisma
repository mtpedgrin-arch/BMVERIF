generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_DATABASE_URL")
}

model User {
  id        String     @id @default(cuid())
  name      String?
  email     String     @unique
  password  String?
  role      String     @default("user")
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  emailVerified     Boolean   @default(true)
  verifyToken       String?
  verifyTokenExpiry DateTime?
  resetToken        String?
  resetTokenExpiry  DateTime?
  twoFactorEnabled  Boolean   @default(false)
  twoFactorSecret   String?
  newsletter        Boolean   @default(true)
  stockUpdates      Boolean   @default(true)
  permissions       Json      @default("{}")

  referralCode   String?   @unique // unique code for sharing (e.g. JUAN4K2M)
  referredBy     String?            // referralCode used when registering
  referralCredit Float     @default(0) // accumulated credit from referrals

  orders      Order[]
  favorites   Favorite[]
  messages    ChatMessage[]
  reviews     Review[]
  referrals   Referral[]  @relation("referrer")
}

model Product {
  id        String   @id @default(cuid())
  name      String
  details   String?
  price     Float    @default(0)
  cost      Float    @default(0)
  tiers     Json     @default("[]")
  stock     Int      @default(0)
  sales     Int      @default(0)
  rating    Float    @default(0)
  reviews   Int      @default(0)
  isActive      Boolean  @default(true)
  badgeDiscount Float    @default(0)
  category      String   @default("bm") // bm | ads-account
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Order {
  id        String   @id @default(cuid())
  status    String   @default("pending") // pending|paid|cancelled
  userEmail String
  userName  String
  subtotal  Float    @default(0)
  discount  Float    @default(0)
  coupon    String?
  creditUsed Float   @default(0) // referral credit applied to this order
  total     Float    @default(0)
  network   String
  txHash          String?
  uniqueAmount    Float?    // total + random cents para identificar el pago
  expiresAt       DateTime? // 1 hora desde la creación para pagar
  deliveryContent String?  // texto del pedido que sube el admin
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId String?
  user   User?   @relation(fields: [userId], references: [id])
  items  OrderItem[]
}

model OrderItem {
  id        String  @id @default(cuid())
  name      String
  price     Float
  cost      Float   @default(0)
  qty       Int     @default(1)
  orderId   String
  productId String?

  order Order @relation(fields: [orderId], references: [id], onDelete: Cascade)
}

model Favorite {
  id        String   @id @default(cuid())
  productId String
  createdAt DateTime @default(now())

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, productId])
}

model ChatMessage {
  id        String   @id @default(cuid())
  text      String
  isAdmin   Boolean  @default(false)
  isBot     Boolean  @default(false)
  userEmail String
  userName  String
  read      Boolean  @default(false)
  createdAt DateTime @default(now())

  userId String?
  user   User?   @relation(fields: [userId], references: [id], onDelete: SetNull)
}

model Coupon {
  id        String   @id @default(cuid())
  code      String   @unique
  discount  Int      // porcentaje 1-99
  maxUses   Int      @default(1)
  uses      Int      @default(0)
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
}

model Settings {
  key   String @id
  value String
}

model Review {
  id        String   @id @default(cuid())
  productId String
  rating    Int      // 1-5
  comment   String?
  userName  String   // displayed name (anonymized or admin-set)
  createdAt DateTime @default(now())

  userId String?
  user   User?   @relation(fields: [userId], references: [id], onDelete: SetNull)
}

model Notification {
  id        String   @id @default(cuid())
  userEmail String
  type      String   // order_created | order_paid | order_delivered
  title     String
  body      String
  orderId   String?
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
}

model Referral {
  id            String   @id @default(cuid())
  referrerId    String
  referrer      User     @relation("referrer", fields: [referrerId], references: [id], onDelete: Cascade)
  referredEmail String   // email of the person who was referred
  referredId    String?  // set after they register
  status        String   @default("pending") // pending | rewarded
  creditEarned  Float    @default(0)          // 10% of referred user's purchase
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model SavedCart {
  id        String   @id @default(cuid())
  userEmail String   @unique
  userName  String
  items     Json     @default("[]") // [{id, name, price, qty}]
  total     Float    @default(0)
  emailSent Boolean  @default(false)
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
}

model BotKnowledge {
  id        String   @id @default(cuid())
  topic     String                        // Categoría: "Entregas", "Pagos", "Soporte", etc.
  content   String                        // Texto libre: pregunta + respuesta o info general
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model BlogPost {
  id          String    @id @default(cuid())
  title       String
  slug        String    @unique
  excerpt     String?
  content     String
  imageUrl    String?
  published   Boolean   @default(false)
  publishedAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}
