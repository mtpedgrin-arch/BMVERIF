generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_DATABASE_URL")
}

model User {
  id        String     @id @default(cuid())
  name      String?
  email     String     @unique
  password  String?
  role      String     @default("user")
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  emailVerified     Boolean   @default(true)
  verifyToken       String?
  verifyTokenExpiry DateTime?
  resetToken        String?
  resetTokenExpiry  DateTime?
  twoFactorEnabled  Boolean   @default(false)
  twoFactorSecret   String?
  newsletter        Boolean   @default(true)
  stockUpdates      Boolean   @default(true)

  orders    Order[]
  favorites Favorite[]
  messages  ChatMessage[]
  reviews   Review[]
}

model Product {
  id        String   @id @default(cuid())
  name      String
  details   String?
  price     Float    @default(0)
  cost      Float    @default(0)
  tiers     Json     @default("[]")
  stock     Int      @default(0)
  sales     Int      @default(0)
  rating    Float    @default(0)
  reviews   Int      @default(0)
  isActive      Boolean  @default(true)
  badgeDiscount Float    @default(0)
  category      String   @default("bm") // bm | ads-account
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Order {
  id        String   @id @default(cuid())
  status    String   @default("pending") // pending|paid|cancelled
  userEmail String
  userName  String
  subtotal  Float    @default(0)
  discount  Float    @default(0)
  coupon    String?
  total     Float    @default(0)
  network   String
  txHash          String?
  uniqueAmount    Float?    // total + random cents para identificar el pago
  expiresAt       DateTime? // 1 hora desde la creaci√≥n para pagar
  deliveryContent String?  // texto del pedido que sube el admin
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId String?
  user   User?   @relation(fields: [userId], references: [id])
  items  OrderItem[]
}

model OrderItem {
  id        String  @id @default(cuid())
  name      String
  price     Float
  cost      Float   @default(0)
  qty       Int     @default(1)
  orderId   String
  productId String?

  order Order @relation(fields: [orderId], references: [id], onDelete: Cascade)
}

model Favorite {
  id        String   @id @default(cuid())
  productId String
  createdAt DateTime @default(now())

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, productId])
}

model ChatMessage {
  id        String   @id @default(cuid())
  text      String
  isAdmin   Boolean  @default(false)
  userEmail String
  userName  String
  read      Boolean  @default(false)
  createdAt DateTime @default(now())

  userId String?
  user   User?   @relation(fields: [userId], references: [id], onDelete: SetNull)
}

model Coupon {
  id        String   @id @default(cuid())
  code      String   @unique
  discount  Int      // porcentaje 1-99
  maxUses   Int      @default(1)
  uses      Int      @default(0)
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
}

model Settings {
  key   String @id
  value String
}

model Review {
  id        String   @id @default(cuid())
  productId String
  rating    Int      // 1-5
  comment   String?
  userName  String   // displayed name (anonymized or admin-set)
  createdAt DateTime @default(now())

  userId String?
  user   User?   @relation(fields: [userId], references: [id], onDelete: SetNull)
}

model Notification {
  id        String   @id @default(cuid())
  userEmail String
  type      String   // order_created | order_paid | order_delivered
  title     String
  body      String
  orderId   String?
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
}
